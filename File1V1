<!DOCTYPE html>
<html>
<head>
<title>Interactive Org Chart</title>
<style>
  .org-chart {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .level {
    display: flex;
    margin-bottom: 20px;
  }

  .node {
    border: 1px solid #ccc;
    padding: 10px;
    margin: 0 10px;
    text-align: center;
    cursor: pointer;
  }
</style>
</head>
<body>
  <div class="org-chart" id="orgChart">
    <div class="level">
      <div class="node" data-id="ceo">CEO</div>
    </div>
  </div>

  <script>
    const orgChart = document.getElementById('orgChart');

    function addLevel(parentId) {
      const parentNode = document.querySelector(`.node[data-id="${parentId}"]`);
      if (!parentNode) return;

      const newLevel = document.createElement('div');
      newLevel.classList.add('level');

      // Simulate adding 3 children for demonstration
      for (let i = 0; i < 3; i++) {
        const newNode = document.createElement('div');
        newNode.classList.add('node');
        newNode.textContent = `Child ${i + 1}`;
        newNode.dataset.id = `${parentId}-child-${i + 1}`; // Assign a unique ID
        newNode.addEventListener('click', () => addLevel(newNode.dataset.id)); // Make it interactive
        newLevel.appendChild(newNode);
      }

      parentNode.parentNode.insertAdjacentElement('afterend', newLevel); 
    }

    // Initial event listener on the CEO node
    document.querySelector('.node[data-id="ceo"]').addEventListener('click', () => addLevel('ceo'));
  </script>
</body>
</html>
